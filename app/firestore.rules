rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    match /users/{uid} {
      allow read, write: if isOwner(uid);

      match /pantry/{itemId} {
        allow read, write: if isOwner(uid);
      }

      match /recipes/{recipeId} {
        allow read, write: if isOwner(uid);
      }

      match /tokens/{tokenId} {
        allow read, write: if isOwner(uid);
      }
    }
  }
}
